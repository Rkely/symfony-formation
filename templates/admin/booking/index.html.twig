{% extends "admin/base.html.twig" %}
{% block title %} La liste des Resevervation{% endblock %}
{% block body %}
    <div class="contaner">
        <h1 class="my-5">Administration des Resevervations</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Visiteur</th>
                    <th>Annonces</th>
                    <th>Duree</th>
                    <th>Montant</th>
                    <th><strong>Action</strong> </th>
                </tr>
            </thead>
            <tbody>
            {% for booking in pagination.data %}
             <tr>
                 <td>{{booking.id}}</td>
                 <td>{{booking.createdAt|date('d/m/y H:i')}}</td>
                 <td><img src="{{booking.booker.picture}}" alt="" class="avatar avatar-micro">{{booking.booker.fullName}}</td>
                 <td>{{booking.ad.title}}</td>
                 <td>{{booking.getDuration()}}</td>
                 <td>{{booking.amount}}</td>
                 <td>
                    <a href="{{path('admin_booking_edit',{id:booking.id}) }}" class="btn btn-primary">
                        <i class="fas fa-pen"></i>
                    </a>
                    <a href="{{path('admin_booking_delete',{id:booking.id}) }}" class="btn btn-danger">
                        <i class="fas fa-trash"></i></a>
                 </td>
             </tr>
             {% endfor %}
            </tbody>
        </table>
        {{pagination.display()}}
    </div>

{% endblock %}