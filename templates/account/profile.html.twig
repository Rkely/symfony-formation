{% extends "base.html.twig" %}
{% block title %}Modifier mon profile{% endblock %}
{% block body %}
    <div class="container">
            <h1 class="my-5">modification du profil</h1>
            {{ form_start(form) }}
            <div class="row">
                <div class="col">
                    <div class="alert alert-light">
                     <h2 class="alert-heading">Informations génerales</h2>
                     <hr>
                     {{form_row(form.firstName)}}
                     {{form_row(form.lastName)}}
                     {{form_row(form.email)}}
                     {{form_row(form.picture)}}
                    </div>
                </div>
                <div class="col">
                   
                    <div class="alert alert-lght">
                        <h2 class="alert-heading">Détails</h2> <hr>
                        {{form_row(form.introduction)}}
                        {{form_row(form.description| raw)}}
                        <hr>
                        <p>Si vous avez terminez vos modification, vous pouvez les sauvegarder</p>
                        <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i>
                        Enregistres les modification</button>
                    </div>
                </div>
            </div>    
            {{ form_end(form)}}
       
    </div>
{% endblock %}